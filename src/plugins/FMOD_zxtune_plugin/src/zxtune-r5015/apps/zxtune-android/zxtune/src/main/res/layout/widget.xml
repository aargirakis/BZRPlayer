<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/widget"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:drawable/screen_background_dark"
>
    <TextView
            android:id="@+id/widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/spacing_half"
            android:layout_marginRight="@dimen/spacing_half"
            style="@style/text_main"
    />
    <ImageButton
            android:id="@+id/widget_ctrl_prev"
            android:src="@drawable/ic_prev"
            android:layout_toLeftOf="@id/widget_ctrl_play_pause"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            style="@style/Button"
    />
    <ImageButton
            android:id="@+id/widget_ctrl_play_pause"
            android:src="@drawable/ic_play"
            android:layout_toLeftOf="@id/widget_ctrl_next"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            style="@style/Button"
    />
    <ImageButton
            android:id="@+id/widget_ctrl_next"
            android:src="@drawable/ic_next"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            style="@style/Button"
    />
</RelativeLayout>