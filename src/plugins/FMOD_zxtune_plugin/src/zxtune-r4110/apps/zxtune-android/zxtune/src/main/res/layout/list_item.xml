<?xml version="1.0" encoding="utf-8"?>
<app.zxtune.ui.CheckableRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/block"
    android:background="@drawable/checkable_background"
    >
    <ImageView
      android:id="@+id/list_item_icon"
      android:layout_width="@dimen/item_height"
      android:layout_height="wrap_content"
      android:layout_marginLeft="@dimen/spacing_half"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_half"
        android:layout_marginRight="@dimen/spacing_half"
        android:layout_toRightOf="@+id/list_item_icon"
        android:layout_toLeftOf="@+id/list_item_text_detail"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/list_item_text_main"
            style="@style/text_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/list_item_text_aux"
            style="@style/text_aux"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/list_item_text_detail"
        style="@style/text_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_half"
        android:layout_marginRight="@dimen/spacing_half"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:drawablePadding="@dimen/spacing_half" />

</app.zxtune.ui.CheckableRelativeLayout>
