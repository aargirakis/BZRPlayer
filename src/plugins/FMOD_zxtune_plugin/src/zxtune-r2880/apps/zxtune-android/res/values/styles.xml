<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="text_main" parent="android:style/TextAppearance.Medium">
    <item name="android:singleLine">true</item>
  </style>
  <style name="text_aux" parent="android:style/TextAppearance.Small">
    <item name="android:singleLine">true</item>
  </style>
  <style name="block">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/item_height</item>
  </style>
  <style name="button">
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_width">wrap_content</item>
  </style>
  <!-- buttons already has spacing_half margins -->
  <style name="block_buttons" parent="block">
    <item name="android:paddingLeft">@dimen/spacing_half</item>
    <item name="android:paddingRight">@dimen/spacing_half</item>
  </style>
</resources>
