countdown	equ	$fc98
	eif

	org	$124
main
	sei
	mvy	#0	^4e
	lda:rne	^4b
	sta	^40
	ldx	#29
	sta:rpl	^00,x-
	ert	*!=$13a
	ldx	#8
init_pokey_1
	sta	$d210,x
	sta	$d200,x
	dex:bpl	init_pokey_1
	lda	#3
