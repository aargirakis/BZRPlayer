	cmp:rne	^4b
	jsr	player
	ldx	#0
ntsc	equ	*-1
	lda	fastplay_low_bit
	lsr	@
	bcc	fastplay_is_even
	lda	#0
calls	equ	*-1
	inc	calls
	lsr	@
fastplay_is_even
	lda	vcount_period,x
	adc	#125
expected_vcount	equ	*-1
	bcs	next_frame
	cmp	vcount_wrap,x
	bcc	same_frame
next_frame
	sbc	vcount_wrap,x
	sec
same_frame
	sta	expected_vcount
	lda	frame_period,x
	adc	#0
expected_frame	equ	*-1
	sta	expected_frame
	cmp	#0
frame	equ	*-1
	rne
	lda	expected_vcount
	bcs	player_loop	!

nmi_info
	pha
	txa:pha
	ldx	ntsc
	jsr	countdown
	pla:tax
	pla
nmi
	inc	frame
	rti

